<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/EditTextTheme</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="ApplicationTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <!--<style name="ApplicationButton" parent="Widget.AppCompat.Button.Borderless">-->
        <!--<item name="android:layout_width">80dp</item>-->
        <!--<item name="android:layout_height">70dp</item>-->
        <!--<item name="android:maxLines">1</item>-->
        <!--<item name="android:textColor">@color/black_3f3a3a</item>-->
        <!--<item name="android:textSize">14sp</item>-->
        <!--<item name="android:background">@drawable/button_application_ripple</item>-->
        <!--<item name="android:gravity">bottom|center_horizontal</item>-->
        <!--<item name="android:fontFamily">@font/noto_sans</item>-->
        <!--<item name="android:letterSpacing">0.15</item>-->
    <!--</style>-->

    <style name="ApplicationButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_application_ripple</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="ApplicationIconDimension">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="ProfileOrderButton" parent="ApplicationButton">
        <item name="android:background">@drawable/button_application_ripple</item>
    </style>

    <style name="RecyclerViewHolder" parent="ApplicationButton">
        <item name="android:background">@drawable/recycler_view_holder_ripple</item>
    </style>

    <!-- Invitation Image Button -->
    <style name="InvitationButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="dp24IconButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="DrawerMenuItem">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">16sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/black_3f3a3a</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ProgressTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/green_6eafa6</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black_3f3a3a</item>
        <item name="colorControlActivated">@color/green_6eafa6</item>
        <item name="colorControlHighlight">@color/green_6eafa6</item>
    </style>

</resources>
