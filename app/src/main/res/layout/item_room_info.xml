<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/RecyclerViewHolder">

    <TextView
        android:id="@+id/item_text_view_room_list_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/noto_sans"
        android:text="TextView"
        android:textColor="@color/black_3f3a3a"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_text_view_tenant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/gray_999999"
        app:layout_constraintBottom_toBottomOf="@+id/item_text_view_tenant"
        app:layout_constraintStart_toEndOf="@+id/item_text_view_tenant"
        app:layout_constraintTop_toTopOf="@+id/item_text_view_tenant"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/item_text_view_tenant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/tenant_name"
        android:textColor="@color/gray_999999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_text_view_room_list_room_name"
        app:layout_constraintTop_toBottomOf="@+id/item_text_view_room_list_room_name"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/item_image_view_delete_button_room_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />
</android.support.constraint.ConstraintLayout>