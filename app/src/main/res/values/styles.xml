<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="ApplicationTitle">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="ApplicationButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black_3f3a3a</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_application_ripple</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="ProfileOrderButton" parent="ApplicationButton">
        <item name="android:background">@drawable/button_application_ripple</item>
    </style>

</resources>
